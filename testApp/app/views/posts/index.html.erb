<% content_for :page_title,  "Index" %>

<div class="section">
	<div class="container">
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Action</th>
  </tr>
 </thead>
 <tbody>
<% if @posts.present? %>
 	<% @posts.each do |post| %>
    <tr>
        <td>
        	<%= post.title %>
        </td>
        <td><%= post.description %></td>
        <td><%= link_to "Show", post %> </td>
     </tr>
    <%end%>
    <%else%>
    <tr> <td> There are no post created by you</td><tr>
    <%end%>
    <tbody>
			</table>
		</div>

		<%= link_to "Create new post", new_post_path, class:"button" %>
	</div>
</div>